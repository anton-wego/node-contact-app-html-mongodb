<div class='container mt-3'>
	<div class="row">
		<div class="col-md-6">
			<h2>Edit Contact Form</h2>
      <% if (typeof errors !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach( error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      
			<form method="post" action="/contact?_method=PUT">
        <input type="hidden" name='oldName' value="<%= contact.oldName || contact.name %>" />
        <input type="hidden" name='_id' value="<%= contact._id %>" />
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required value="<%= contact.name %>" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
        </div>

        <div class="mb-3">
          <label for="hp" class="form-label">No Hp</label>
          <input type="text" class="form-control" id="hp" name="hp" required value="<%= contact.hp %>" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>
		</div>
	</div>
</div>
